_G.Strength = false
_G.Durability = false
_G.Chakra = false
_G.Sword = false
_G.Agilty = false
_G.Speed = false



spawn(function()

while _G.Strength == true do
    
    local args = {
        [1] = "Stat",
        [2] = "Strength"
    }
    
    game:GetService("ReplicatedStorage").RSPackage.Events.StatFunction:InvokeServer(unpack(args))
    wait()

end
    
end)

